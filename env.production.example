# Production Environment Variables
# Database Configuration
POSTGRES_DB=aica_sys
POSTGRES_USER=aica_user
POSTGRES_PASSWORD=your-secure-password
POSTGRES_HOST=postgres-service
POSTGRES_PORT=5432

# Redis Configuration
REDIS_URL=redis://redis-service:6379
REDIS_HOST=redis-service
REDIS_PORT=6379

# Qdrant Configuration
QDRANT_URL=http://qdrant-service:6333
QDRANT_HOST=qdrant-service
QDRANT_PORT=6333

# Application Configuration
ENVIRONMENT=production
SECRET_KEY=your-super-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here
CORS_ORIGINS=https://aica-sys.com,https://www.aica-sys.com

# Frontend Configuration
NEXT_PUBLIC_API_URL=https://api.aica-sys.com
NEXTAUTH_URL=https://aica-sys.com
NEXTAUTH_SECRET=your-nextauth-secret-here

# OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Payment Configuration
STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@aica-sys.com

# Monitoring Configuration
PROMETHEUS_RETENTION_TIME=200h
GRAFANA_PASSWORD=your-grafana-password

# Security Configuration
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
CSRF_SECRET=your-csrf-secret

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Performance Configuration
WORKERS=4
MAX_CONNECTIONS=1000
TIMEOUT=30
